{
  "name": "binge-watch-time",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.18.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-standard": "^3.0.1",
    "node-sass-chokidar": "^0.0.3",
    "nodemon": "^1.15.1",
    "npm-run-all": "^4.1.2",
    "react-scripts": "1.1.1",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.1.0"
  },
  "dependencies": {
    "express": "^4.16.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "scripts": {
    "dev:server": "nodemon --watch server server/index.js --exec 'yarn lint:server -c .eslintrc.dev.js && NODE_PATH=server babel-node'",
    "dev:client": "npm-run-all --parallel lint:client:css dev:client:*",
    "dev:client:js": "NODE_PATH=src react-scripts start",
    "dev:client:css": "npm run build:client:css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",



    "build": "npm-run-all build:client build:server",
    "build:server": "babel server -d build-server",
    "build:client": "npm-run-all build:client:css build:client:js",
    "build:client:js": "NODE_PATH=src react-scripts build",
    "build:client:css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",


    "lint": "npm-run-all --sequential lint:server lint:client",
    "lint:server": "ESLINT_MODE=node eslint 'server/**/*.js' --ignore-path .gitignore",
    "lint:client": "npm-run-all --sequential lint:client:js lint:client:css",
    "lint:client:js": "eslint --ext .js --ignore-path .gitignore --ignore-pattern '/server/*' .",
    "lint:client:css": "stylelint 'src/scss/**/*.scss'",


    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "proxy": {
    "/api": {
      "target": "http://127.0.0.1:3001"
    }
  }
}
